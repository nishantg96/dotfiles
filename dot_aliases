alias zshconfig="mate ~/.zshrc"
alias ohmyzsh="mate ~/.oh-my-zsh"
alias cls="clear"
alias update="sudo apt update"
alias upgrade="sudo apt upgrade"
alias update-upgrade="sudo apt update && sudo apt upgrade"

alias cma="chezmoi -v apply"
alias cmcd="chezmoi cd"

alias resetdunst="killall dunst;notify-send foo"
alias rrr="ranger"
alias apt="apt-fast"
alias sinstall="sudo apt install"
alias r1s="source ${ROS1_INSTALL_PATH}/setup.zsh"
alias r2s="source ${ROS2_INSTALL_PATH}/setup.zsh"

if [ "$(command -v exa)" ]; then
    unalias -m 'll'
    unalias -m 'l'
    unalias -m 'la'
    unalias -m 'ls'
    alias ls='exa -G  --color auto --icons -a -s type'
    alias ll='exa -l --color always --icons -a -s type'
fi

if [ "$(command -v bat)" ]; then
    unalias -m 'cat'
    alias cat='bat -pp --theme="gruvbox-dark"'
fi


#Docker aliases
alias dcd="docker compose down"
alias dcu="docker compose up -d"
alias lzd="lazydocker"
alias dcb="docker compose build"
alias docker_clean_images='docker rmi $(docker images -a --filter=dangling=true -q)'
alias docker_clean_ps='docker rm $(docker ps --filter=status=exited --filter=status=created -q)'